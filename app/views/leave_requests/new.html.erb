<h1>Apply for Leave</h1>

<div class="leave-form-container">
  <%= form_with model: @leave_request, local: true do |f| %>
    <div>
      <%= f.label :start_date, "Start Date" %>
      <%= f.date_field :start_date %>
    </div>

    <div>
      <%= f.label :end_date, "End Date" %>
      <%= f.date_field :end_date %>
    </div>

    <div>
      <%= f.label :reason, "Reason for Leave" %>
      <%= f.text_area :reason %>
    </div>

    <div>
      <%= f.label :hr_id, "Select HR" %>
      <%= f.collection_select :hr_id, User.only_hr, :id, :email, prompt: "Select an HR" %>
    </div>

    <div>
      <%= f.submit "Submit Leave Request" %>
    </div>
  <% end %>
</div>
